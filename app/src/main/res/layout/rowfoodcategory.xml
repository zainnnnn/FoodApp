<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="5dp"
        app:cardElevation="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:gravity="center|top"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@color/colorPrimaryDarkSecond"

                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageViewForRow"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_gravity="center"
                    app:civ_border_color="@color/colorWhite"
                    android:src="@drawable/app_logo"
                    app:civ_border_width="1dp"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:id="@+id/tv_FoodTitleForRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Recipe Title"
                    android:gravity="center|left"
                    android:paddingLeft="50dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <VideoView
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/colorForHint"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryDarkSecond"
                    android:text="Ingredients :"
                    android:gravity="center"
                    android:textColor="@color/colorForHint"
                    />
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:id="@+id/tv_FoodIngredientsForRow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDarkSecond"
                        android:textSize="17sp"
                        />
                </ScrollView>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/colorForHint"
                >

            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryDarkSecond"
                    android:text="Recipe :"
                    android:gravity="center"
                    android:textColor="@color/colorForHint"
                    />
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:id="@+id/tv_FoodRecipeForRow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDarkSecond"
                        android:textSize="17sp"
                        />
                </ScrollView>


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>